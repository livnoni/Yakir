<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yehud.yakir.org.example.yehud.yakir.MainActivity">


    <LinearLayout
        android:id="@+id/mainLLinearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">


        <TextView
            android:id="@+id/welcomeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ברוך הבא"
            android:textColor="@color/navy"
            android:textSize="30sp" />

        <Button
            android:id="@+id/TfilaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:text="זמני תפילות"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:background="@drawable/customborder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/closesetTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="מניינים קרובים"
                android:textColor="@color/maroon"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/closestMinyansTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="0"
            android:background="@drawable/customborder"
            android:orientation="vertical">

            <TextView
                android:id="@+id/updateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="הודעות ועדכונים"
                android:textColor="@color/maroon"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/updateMsgTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"
                android:textColor="@color/purple"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
